@model Kütüphaneotomasyonu.entities.Model.Kullanıcırolleri

@{
    ViewBag.Title = "Rol Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Layout yolunu kendine göre ayarla
}

<h2>@ViewBag.KullaniciAdi İçin Rol Ekleme</h2>

@using (Html.BeginForm("Ekle", "KullaniciRolleri", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.kullanıcıId)

    <div class="form-group">
        @Html.LabelFor(m => m.rolId)
        @Html.DropDownListFor(m => m.rolId, (IEnumerable<SelectListItem>)ViewBag.Liste, "Seçim Yapınız", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.rolId, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Ekle</button>
    <a href="@Url.Action("Index", "KullaniciRolleri", new { id = Model.kullanıcıId })" class="btn btn-secondary">Geri Dön</a>
}
