@model List<Kütüphaneotomasyonu.entities.Model.Uyeler>

@{
    ViewBag.Title = "Kitap Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Uyeler Listesi</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad Soyad</th>
            <th>Telefon </th>
            <th>Adres</th>
            <th>Email</th>
            <th>Resim</th>
            <th>Tarih</th>
            <th>İşlemler</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.adısoyadı</td>
                <td>@item.telefon</td>
                <td>@item.adres</td>
                <td>@item.email</td>
                <td> <img src="@item.Resim" width="100" height="100" /></td>
                <td>@item.kayıttarihi</td>
                
                <td>
                   
                    @Html.ActionLink("Düzenle", "Duzenle", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Sil", "Sil", new { id = item.Id }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Silmek istediğinizden emin misiniz?');" })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Yeni Üye Ekle", "Ekle", null, new { @class = "btn btn-primary" })
</p>
