


 

@model KutuphaneOtomasyonuentities.model.Yayınevi

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    ViewBag.Title = "Yayınevi Güncelle";
}

<h2>Yayınevi Güncelle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id) <!-- Id'yi gizli alanda tutuyoruz -->

    <div class="form-horizontal">
        <h4>Yayınevi</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Adı, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Adı, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Adı, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Adres, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Adres, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
                @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
