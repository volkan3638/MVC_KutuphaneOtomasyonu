@model Kütüphaneotomasyonu.entities.Model.KitapTürleri
@{
    ViewBag.Title = "Ekle1";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Kitap Türü Ekleme Sayfası
            </div>
            <div class="ibox-body">

                @using (Html.BeginForm("Ekle1", "KitapTurleri", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.Kitapturu)
                        @Html.TextBoxFor(x => x.Kitapturu, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Kitapturu, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.Acıklama)
                        @Html.TextBoxFor(x => x.Acıklama, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Acıklama, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">
                            Ekle
                        </button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
