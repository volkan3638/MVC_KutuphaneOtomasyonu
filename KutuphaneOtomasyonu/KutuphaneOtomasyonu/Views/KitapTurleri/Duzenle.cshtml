@model Kütüphaneotomasyonu.entities.Model.KitapTürleri

@{
    ViewBag.Title = "Kitap Türü Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <h3>Kitap Türü Güncelleme Sayfası</h3>
            </div>
            <div class="ibox-body">
                @using (Html.BeginForm("Duzenle", "KitapTurleri", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <!-- Id bilgisi gizli olarak formda gönderilecek -->
                    @Html.HiddenFor(x => x.Id)

                    <div class="form-group">
                        <label>Kitap Türü</label>
                        @Html.TextBoxFor(x => x.Kitapturu, new { @class = "form-control", placeholder = "Kitap türünü giriniz" })
                        @Html.ValidationMessageFor(x => x.Kitapturu, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        @Html.TextAreaFor(x => x.Acıklama, new { @class = "form-control", placeholder = "Açıklama giriniz", rows = 3 })
                        @Html.ValidationMessageFor(x => x.Acıklama, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <!-- Submit butonu, ActionLink değil! -->
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        @Html.ActionLink("İptal", "Index", null, new { @class = "btn btn-secondary ml-2" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
